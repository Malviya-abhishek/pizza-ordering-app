<section class="login">

  <div class="p-10 xs:p-0 mx-auto md:w-full md:max-w-md">
    <div class="bg-white shadow w-full rounded-lg divide-y divide-gray-200">
      
      <!-- FORM -->
      <form action="/register" method="POST" class="px-5 py-7">
        <% if(messages.error){ %>
        <span class="text-red-500 text-sm"><%= messages.error %></span>
        <% } %>
        <label class="font-bold text-lg text-gray-600 pb-1 block">Name</label>
        <input name="name" value="<%= messages.name  %>" type="text" class="border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" />
        <label class="font-bold text-lg text-gray-600 pb-1 block">E-mail</label>
        <input name="email" value="<%= messages.email  %>" type="email" class="border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" />
        <label class="font-semibold text-lg text-gray-600 pb-1 block">Password</label>
        <input name="password" type="password" class="border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" />
        <button type="submit"
          class=" text-center inline-block font-bold text-lg btn-primary  text-white w-full py-2.5 rounded-full text-sm shadow-sm ">
          <span class="inline-block mr-2 ">Sign Up</span>
        </button>
      </form>
      <!-- FORM END -->

      <!-- ALREADY HAVE ACCOUNT -->
      <div class="py-5">
        <div class="grid grid-cols-1 gap-1">
          <div class="text-center  whitespace-nowrap">
            <a href="login" class="forgot-btn  mx-5 px-5 py-4 cursor-pointer font-bold text-sm rounded-full">
              <span class="inline-block ml-1">Already have account</span>
            </a>
          </div>
        </div>
      </div>
      <!-- ALREADY HAVE ACCOUNT END -->
    </div>
  </div>

  <p class="text-center text-gray-500 text-xs">
    &copy;2020 Pizza Mania
  </p>
</section>